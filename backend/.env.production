# Backend Environment Variables for Production

# Server Configuration
PORT=8000
NODE_ENV=production

# Database
DB_PATH=/app/data/stress-tracker.db

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000,http://kod-mac:3000

# Session
SESSION_SECRET=change_this_to_a_secure_random_string
SESSION_EXPIRY=86400000  # 24 hours in milliseconds

# Cooldown Periods
STRESS_COOLDOWN_MS=300000     # 5 minutes in milliseconds
SUPERSTRESS_COOLDOWN_MS=86400000  # 24 hours in milliseconds

OPENAI_API_KEY=${OPENAI_API_KEY}

# Docker environment configuration for Stress Tracker - TEMPLATE
# Rename this file to .env and update the values

# API and Connection Settings
NODE_ENV=production
PORT=8000
FRONTEND_URL=http://localhost:8000
LOG_LEVEL=info

# Database Settings
DB_PATH=/app/data/stress-tracker.db

# Authentication Settings
SESSION_SECRET=change-me-to-a-secure-random-string
SESSION_EXPIRY=86400000

# Rate Limiting and Cooldown Settings
STRESS_COOLDOWN_MS=300000
SUPERSTRESS_COOLDOWN_MS=10800000

# API Keys
OPENAI_API_KEY=your-openai-api-key-here

# Frontend build configuration
VITE_API_URL=http://localhost:8000